	<logger name="job.file" 				level="DEBUG">
	    <appender-ref ref="ARMS-FILE" />
	</logger>
	
	<logger name="job.upload" 				level="DEBUG">
	    <appender-ref ref="ARMS-UPLOAD" />
	</logger>
	
	<logger name="com.arms.app" 				level="DEBUG">
	    <appender-ref ref="ARMS" />
	</logger>
	

	
    
